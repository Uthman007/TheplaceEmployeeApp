﻿
@model EmployeeListViewModel
@{
	ViewData["Title"] = "View All Employees";
}

<h1>Available Employees</h1>
<hr/>

<p>Below is the list of employees currently in the system.</p>
<div class="row">
	<div class="col-md-6">
		<form asp-action="List">
			<div class="mb-3">
				@*<label asp-for="@Model.SearchTerm" class="control-label"></label>*@
				<input asp-for="@Model.SearchTerm" class="form-control" />
				<button type="submit" class="btn btn-default btn-sm">
					@*<span class="glyphicon glyphicon-search"></span>*@ Search
				</button>
			</div>
		</form>
	</div>
</div>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>No.</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Middle Name</th>
			<th>Email Address</th>
			<th>Residential Address</th>
			<th>Age</th>
			<th>Phone No.</th>
			<th>Date Employed</th>
			<th>Date Of Birth</th>
			<th>Skin Color</th>
			<th>Branch Name</th>
			<th>State Name</th>
			<th>Department</th>
			<th>Post</th>
		</tr>
	</thead>
	<tbody>
		@{
			var counter = 0;
			foreach (var employee in Model.Employees)
			{
				++counter;
				<tr> 

					<td>@counter</td>
					<td>@employee.FirstName</td>
					<td>@employee.LastName</td>
					<td>@employee.MiddleName</td>
					<td>@employee.EmailAddress</td>
					<td>@employee.ResidentialAddress</td>
					<td>@employee.Age</td>
					<td>@employee.PhoneNumber</td>
					<td>@employee.DateEmployed</td>
					<td>@employee.DateOfBirth</td>
					<td>@employee.SkinColor</td>
					<td>@employee.BranchName</td>
					<td>@employee.StateName</td>
					<td>@employee.Department</td>
					<td>@employee.Designation</td>
					<td>
					    <a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-success">View</a>
						<a asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary">Edit</a>
						<a asp-controller="Employees" asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">Delete</a>
						@*<form method="post" style="display:inline">
							<button asp-controller="Books" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger" onclick="return confirm('Do you really want to delete this book?');">
								Delete
							</button>
						</form>*@
					</td>
				</tr>
			}
		}
	</tbody>
</table>