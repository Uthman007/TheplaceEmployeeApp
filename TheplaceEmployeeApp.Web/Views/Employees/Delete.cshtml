@using TheplaceEmployeeApp.Data.Enums;
@model TheplaceEmployeeApp.Data.Entities.Employee;
@{
	ViewData["Title"] = "Delete Employee";
}

<h1>Remove Employee</h1>
<hr />

<p class="text-danger">You are about to delete an employee from the library. This is action cannot be reversed. Are you sure about this?</p>

<div class="card">
	<div class="col-md-6">
		<form method="post">
			<div class="card-body">
				<h5 class="card-text">@Model.FirstName</h5>
			</div>
			<div class="card-body">
				<h5 class="card-text">@Model.LastName</h5>
			</div>
			<div class="card-body">
				<h5 class="card-text">@Model.Designation</h5>
			</div>
			<div class="card-body">
				<h5 class="card-text">@Model.BranchName</h5>
			</div>

			<button type="submit" asp-controller="Employees" asp-action="ConfirmDelete" asp-route-id="@Model.Id" class="btn btn-danger">Yes, I'm sure</button>
			<a asp-controller="Employees" asp-action="List" class="btn btn-secondary">No, Go back</a>
		</form>
	</div>
</div>
